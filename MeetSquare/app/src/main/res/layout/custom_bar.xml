<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorFix"
        android:paddingBottom="5dp">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:src="@drawable/logosplash">
            <ImageView
                android:id="@+id/text_logo"
                android:layout_below="@+id/text_skip"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:src="@drawable/logosplash"/>
            <TextView
                android:id="@+id/text_slogan"
                android:layout_below="@+id/text_logo"
                android:text="booking ruang meeting dengan mudah"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"/>
        </android.support.v7.widget.Toolbar>
    </LinearLayout>
    <include android:layout_below="@id/line1"
        layout="@layout/activity_room"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />
</RelativeLayout>